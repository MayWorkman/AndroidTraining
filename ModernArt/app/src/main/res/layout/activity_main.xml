<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artUI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:background="@color/background">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/row0Col0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:layout_margin="2dp"
            android:paddingLeft="116dp"
            android:paddingRight="116dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp"
            android:layout_columnSpan="2"/>
        <TextView
            android:id="@+id/row0Col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />


        <TextView
            android:id="@+id/row1Col0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/aqua"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />
        <TextView
            android:id="@+id/row1Col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />
        <TextView
            android:id="@+id/row1Col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="105dp"
            android:paddingBottom="105dp"
            android:layout_rowSpan="2"/>


        <TextView
            android:id="@+id/row2Col0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="105dp"
            android:paddingBottom="105dp"
            android:layout_rowSpan="2"/>
        <TextView
            android:id="@+id/row2Col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />


        <TextView
            android:id="@+id/row3Col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />
        <TextView
            android:id="@+id/row3Col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:layout_margin="2dp"
            android:paddingLeft="57dp"
            android:paddingRight="57dp"
            android:paddingTop="47dp"
            android:paddingBottom="47dp" />
    </GridLayout>

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:progress="1"
        android:secondaryProgress="0"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>